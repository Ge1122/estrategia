#função de potencia
def potencia():
    x = float(input("Digite um número: "))
    y = int(input("quantas vezes o número sera mutiplicado: "))
    potencia = 0
    #loop que faz potencia 
    for i in range(y):

        potencia = x*x
    print(f"O número {x} elevado ao {y} é: {potencia}")

print(potencia())

def raiz():
    a = int(input("Digite um número para achar a a raiz: "))
    b = int(input("Digite qual raiz que vc quer: "))
    c = 1/b

    raiz = a ** c

    print(raiz)

print(raiz())








